{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES2022", // モダンな標準に引き上げ
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // v4のESM型解決に必須
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Next.jsの推奨値に変更
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      // srcなし構造に完全対応
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts" // Turbopack用の型定義を含める
  ],
  "exclude": [
    "node_modules"
  ]
}
